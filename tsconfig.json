{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthrough": true,
    "types": [
      "google.maps",
      "vite/client" // Add this to recognize import.meta.env
    ],
    "baseUrl": ".",    // Add this to help with imports
    "paths": {         // Add this to help with imports
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "src/env.d.ts"] // Explicitly include env.d.ts
}